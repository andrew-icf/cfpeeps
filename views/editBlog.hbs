<h1>Update your favorite Crossfitter!</h1>

<form method="post" action="/update/{{post.id}}">
  <select name="posting_id">
    {{#each users}}
    <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select><br>
  <input type="text" name="title" placeholder="Athlete" value="{{post.title}}" required><br>
  <input type="url" name="image" placeholder="Image url" value="{{post.image}}" required><br>
  <textarea name="description" placeholder="Brief description of your athlete." required>{{post.description}}</textarea><br>
  <button type="submit">3, 2, 1...Update!</button>
</form>
<a href="/blog">Back to Blog</a>
